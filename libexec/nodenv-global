#!/usr/bin/env bash
#
# Summary: Persist the preferred NodeJS default version.
#
# Usage: nodenv global <version>
#        nodenv global --unset|-u

# Bomb out if we hit an error, ever
set -e

# Verbose output in debug mode
[ -n "$NODENV_DEBUG" ] && {
  set -x
}

# Provide nodenv completions
if [ "$1" = "--complete" ]; then
  nodenv-versions
  exit 0
fi

# Set the version
version="$1"
version_file="${NODENV_ROOT}/version"

case "$version" in
  "")
    echo "nodenv: a version or --unset is required" >&2
    exit 1
    ;;

  "-u" | "--unset")
    if [ -f "$version_file" ]; then
      rm "$version_file"
      echo "Unset $version_file"
    else
      echo "nodenv: no global version to unset" >&2
      exit 1
    fi
    ;;

  *)
    echo "$version" > "$version_file"
    echo "Set $version_file to use $version"
    ;;
esac

